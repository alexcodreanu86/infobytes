<div class="row">
  <div class="small-12 medium-10 medium-offset-1 large-8 large-offset-2 columns">
		<% if @errors %>
		  <% @errors.each do |error| %>
		    <p><%= error %></p>
		  <% end %>
		<% end %>

		<%= form_for [@sub_chapter,@image] do |f|%>
		  
		  <div><%= f.label :image_path %><br>
		  <%= f.file_field :image_path %></div>

		  <div><%= f.submit "Create Image", class: "button" %></div>

		<% end %>
	</div>
</div>
<a class="close-reveal-modal">&#215;</a>
