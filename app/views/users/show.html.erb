<h1><%= "#{@user.first_name} #{@user.last_name}"%> </h1>

<h3>Your Tutorials</h3>
<div>
	<% @tutorials.each do |tutorial| %>
		<div class="tutorial-list medium-10 medium-offset columns">
			<li>
				<p class="tut-title">
					<%= link_to "#{tutorial.title}", tutorial_path(tutorial.id) %>
				</p>
				<p class="tut-description">
					<%= tutorial.description %>
				</p>
				<p class="author-date">
					<%= authorship(tutorial) %>	
				</p>
			</li>
		</div>
	<% end %>
</div>	


