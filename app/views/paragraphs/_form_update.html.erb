<div class="row">
  <div class="small-12 medium-10 medium-offset-1 large-8 large-offset-2 columns">
    <% if @errors %>
      <% @errors.each do |error| %>
        <p><%= error %></p>
      <% end %>
    <% end %>

    <%= form_for @paragraph do |f|%>
      
      <div><%= f.label :body %><br>
      <%= f.text_area :body %></div>

      <div><%= f.submit %></div>

    <% end %>

  </div>
</div>