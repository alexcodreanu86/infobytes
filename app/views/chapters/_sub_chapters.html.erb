<div id="sub-chapter-list-<%= @chapter.id %>">
  <% @chapter.sub_chapters.each do |sub_chapter| %>
    <div class="sub-chapter" id="sub-chapter-<%= sub_chapter.id %>">
      <h2><%= link_to sub_chapter.title, sub_chapter_path(sub_chapter) %></h2>
      <% if chapter_creator? %>
        <%= link_to '<i class="fa fa-trash-o fa-2x del-sub-chapter"></i>'.html_safe, sub_chapter_path(sub_chapter), method: :delete, data: { confirm: "Are you sure?" } %> 
      <% end %>
    </div>
  <% end %>
</div>

<% if chapter_creator? %>
  <%= link_to "<i class='fa fa-plus-square fa-2x'></i>".html_safe, new_chapter_sub_chapter_path(@chapter), class: "add-sub-chapter" %>
  <div id="sub-chapter-form-<%= @chapter.id %>" style="display: none;"></div>
<% end %>

