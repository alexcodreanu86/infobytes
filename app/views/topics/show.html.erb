<div class="view-header medium-10 medium-offset columns">
		<h2>Subtopics</hd>
</div>
<div class="row topic-show">
	<div class="medium-10 medium-offset columns">		
		<% @subtopics.each do |subtopic| %>
			<%= link_to subtopic_path(subtopic) do %>	
					<div class="sub-topic-list">
						<li>
							<p class="tut-title">
								<%= subtopic.title %>
							<p class="tut-description">
								<%= subtopic.description %>
							</p>
						</li>
					</div>
			<% end %>
		<% end %>		
		<%= will_paginate @subtopics %>
	</div>
</div>